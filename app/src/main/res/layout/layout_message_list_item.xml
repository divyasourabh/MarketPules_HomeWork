<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_thread_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Thread Id"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_message_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Sample Message body"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_thread_id" />

        <TextView
            android:id="@+id/tv_user_agent_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="User Id"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_message_body"/>


        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TimeStampTimeStampTimeStampTimeStampTimeStampTimeStampTimeStampTimeStamp"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_agent_id"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>